<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form">
    <Panel id="productPanelObject" class="sapUiResponsiveMargin" expandable="{device>/system/phone}" expanded="false" width="auto" headerText="Product">
        <content>
            <form:SimpleForm id="objectForm">
                <form:content>
                    <Label id="_IDGenLabel1" text="Category ID" />
                    <Text id="_IDGenText1" text="{CategoryID}" />
                    <Label id="_IDGenLabel2" text="Unit Price" />
                    <Text id="_IDGenText2" text="{UnitPrice}" />
                    <Label id="_IDGenLabel3" text="Units on Order" />
                    <Text id="_IDGenText3" text="{UnitsOnOrder}" />
                    <Label id="_IDGenLabel4" text="Units in Stock" />
                    <Text id="_IDGenText4" text="{UnitsInStock}" />
                </form:content>
            </form:SimpleForm>
        </content>
    </Panel>
</mvc:View>
