<mvc:View xmlns:form="sap.ui.layout.form" controllerName="week3.controller.Object" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic">
    <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">
        <semantic:titleHeading>
            <!-- <Title
                text="{ProductID}"
                level="H2"/> -->
            <ObjectHeader id="objectHeader" title="{ProductID}">
                <attributes>
                    <ObjectAttribute text="{ProductName}" />
                </attributes>
            </ObjectHeader>
        </semantic:titleHeading>

        <semantic:headerContent>
            <ObjectNumber number="{
                    path: 'UnitPrice',
                    formatter: '.formatter.numberUnit'
                }" unit="{UnitsInStock}" />
        </semantic:headerContent>

        <semantic:content>
            <Panel id="productPanelObject" class="sapUiResponsiveMargin" width="auto" headerText="Product">
                <content>
                    <form:SimpleForm id="objectForm">
                        <form:content>
                            <Label text="Category ID" />
                            <Text text="{CategoryID}" />
                            <Label text="Unit Price" />
                            <Text text="{UnitPrice}" />
                            <Label text="Units on Order" />
                            <Text text="{UnitsOnOrder}" />
                            <Label text="Units in Stock" />
                            <Text text="{UnitsInStock}" />
                        </form:content>
                    </form:SimpleForm>
                </content>

                <content>
                    <List id="supplierIDList">
                        <items>
                            <StandardListItem id="supplierCountry" icon="sap-icon://building" title="{Supplier/Country}" />
                            <StandardListItem id="supplierAddress" icon="sap-icon://email" title="{Supplier/ContactTitle}" />
                            <StandardListItem id="supplierPhone" icon="sap-icon://phone" title="{Supplier/Phone}" />
                            <StandardListItem id="supplierCity" icon="sap-icon://map" title="{Supplier/City}" />
                        </items>
                    </List>
                </content>
            </Panel>

            <!-- <Panel id="supplierPanelObject" class="sapUiResponsiveMargin" width="auto" headerText="SupplierID">
                <content>
                    <List id="supplierIDList">
                        <items>
                            <StandardListItem id="supplierCountry" icon="sap-icon://building" title="{Supplier/Country}" />
                            <StandardListItem id="supplierAddress" icon="sap-icon://email" title="{Supplier/ContactTitle}" />
                            <StandardListItem id="supplierPhone" icon="sap-icon://phone" title="{Supplier/Phone}" />
                            <StandardListItem id="supplierCity" icon="sap-icon://map" title="{Supplier/City}" />
                        </items>
                    </List>
                </content>
            </Panel> -->
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress" />
        </semantic:sendEmailAction>
    </semantic:SemanticPage>
</mvc:View>
